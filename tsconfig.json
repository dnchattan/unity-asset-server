{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2018",
    "module": "commonjs",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "es2018"
    ],
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}